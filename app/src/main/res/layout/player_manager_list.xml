<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/match_manager_bg"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="10dp"
    >

    <LinearLayout
        android:id="@+id/firstPlayerManagerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="16dp"
        android:layout_marginHorizontal="10dp"
        >

        <TextView
            android:id="@+id/pmPlayerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alakh Pandey"
            android:textSize="15sp"
            android:textColor="#222222"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/playerManagerLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/player_manager_line"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/pmEnglandTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="England"
                android:layout_marginLeft="15dp"/>

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondPlayerManagerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/firstPlayerManagerLayout"
        android:layout_marginTop="23dp"
        android:layout_marginLeft="150dp">

        <ImageView
            android:id="@+id/pencilImgPlayerMgr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pencil"/>

        <ImageView
            android:id="@+id/wrongImgPlayerMgr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/wrong"
            android:layout_marginLeft="11dp"/>
    </LinearLayout>



</RelativeLayout>