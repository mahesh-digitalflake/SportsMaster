<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".PasswordChangedActivity">

    <ImageView
        android:id="@+id/successImg"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/success"
        android:layout_marginTop="180dp"
        android:layout_marginHorizontal="120dp"
        />

    <TextView
        android:id="@+id/passwordChangedTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password Changed!"
        android:textColor="#1E232C"
        android:layout_marginHorizontal="60dp"
        android:layout_below="@+id/successImg"
        android:layout_marginTop="44dp"
        android:lineSpacingExtra="3sp"
        android:gravity="center"
        android:textSize="26sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/successPasswordTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your password has been changed successfully."
        android:textColor="#8391A1"
        android:layout_marginHorizontal="80dp"
        android:layout_below="@+id/passwordChangedTxt"
        android:layout_marginTop="8dp"
        android:lineSpacingExtra="5sp"
        android:gravity="center"
        android:textSize="15sp"
        android:translationY="-2.4sp"
        />

    <Button
        android:id="@+id/backToLoginBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/successPasswordTxt"
        android:layout_marginTop="37dp"
        android:layout_marginHorizontal="49dp"
        android:background="@drawable/login_btn"
        android:padding="15dp"
        android:text="Back to Login"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

</RelativeLayout>