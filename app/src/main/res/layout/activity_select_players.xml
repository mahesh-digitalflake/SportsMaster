<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Select_Players">

    <LinearLayout
        android:id="@+id/firstLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#5030E5"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/selectPlayerBackBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingVertical="5dp"
            android:layout_marginVertical="15dp"
            android:src="@drawable/back_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/selectPlayerBackBtn"
            android:padding="10dp"
            android:text="Select Players"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

      <ImageView
          android:layout_width="25dp"
          android:layout_height="25dp"
          android:src="@drawable/love_icon"
          android:layout_marginLeft="140dp"
          android:layout_marginTop="12dp"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/secondLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firstLayout"
        android:gravity="center_vertical"
        android:paddingVertical="7dp"
        android:background="#5030E5">

        <ImageView
            android:id="@+id/manchesterImg"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/manchester_logo"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/engText0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/manchesterImg"
            android:text="ENG(0)"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"/>

        <TextView
            android:id="@+id/dayTimeSelectPlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1d:21m"
            android:textColor="#F5A547"
            android:layout_marginLeft="30dp"
            android:textSize="15sp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="1dp"
            android:background="@drawable/bg_time_rounded"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/engText0"
            />

        <TextView
            android:id="@+id/hunText0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/dayTimeSelectPlayer"
            android:text="HUN(0)"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="7dp"/>

        <ImageView
            android:id="@+id/chelseaImg"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/chelsea_logo"
            android:layout_marginLeft="18dp"
            android:layout_toRightOf="@id/hunText0"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/thirdLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/secondLayout"
        android:background="#5030E5">

        <ImageView
            android:id="@+id/rect1"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:src="@drawable/rectangle"
            android:layout_marginLeft="20dp"/>

        <ImageView
            android:id="@+id/rect2"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:src="@drawable/rectangle"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/rect1"/>

        <ImageView
            android:id="@+id/rect3"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:src="@drawable/rectangle"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/rect2"/>

        <ImageView
            android:id="@+id/rect4"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:src="@drawable/rectangle"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/rect3"/>

        <ImageView
            android:id="@+id/rect5"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:src="@drawable/rectangle"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/rect4"/>

        <ImageView
            android:id="@+id/rect6"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:src="@drawable/rectangle"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/rect5"/>

        <ImageView
            android:id="@+id/rect7"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:src="@drawable/rectangle"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/rect6"/>

        <ImageView
            android:id="@+id/rect8"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:src="@drawable/rectangle"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/rect7"/>

        <ImageView
            android:id="@+id/rect9"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:src="@drawable/rectangle"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/rect8"/>

        <ImageView
            android:id="@+id/rect10"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:src="@drawable/rectangle"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/rect9"/>

        <ImageView
            android:id="@+id/rect11"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:src="@drawable/rectangle"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/rect10"/>

    </RelativeLayout>

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thirdLayout">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabTextAppearance="@style/CustomTabStyle"
            app:tabBackground="@color/white"
            app:tabGravity="fill"
            app:tabInlineLabel="true"
            app:tabMode="fixed"
            app:tabTextColor="@color/black"/>

        <LinearLayout
            android:id="@+id/canvas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sortBy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sort By:"
                android:textSize="10sp"
                android:textColor="#000000"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="21dp"
                android:layout_marginBottom="16dp"
                />

            <TextView
                android:id="@+id/points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Points"
                android:textSize="10sp"
                android:textColor="#000000"
                android:layout_marginLeft="155dp"
                android:layout_marginTop="21dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/smallbox"
                android:paddingVertical="4dp"
                android:paddingHorizontal="7dp"
                />

            <TextView
                android:id="@+id/credits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Credits"
                android:textSize="10sp"
                android:textColor="#000000"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="21dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/smallbox"
                android:paddingVertical="4dp"
                android:paddingHorizontal="7dp"
                />



        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>



        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/appBarLayout"
            android:layout_above="@id/selectStarPlayerBtn"/>

    <Button
        android:id="@+id/selectStarPlayerBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/login_btn"
        android:text="Select Star Player"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_marginHorizontal="10dp"/>


    </RelativeLayout>



