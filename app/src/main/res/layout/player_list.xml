<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/playerRectangle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    android:elevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        >

        <ImageView
            android:id="@+id/playerIcon"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:src="@drawable/playericon"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="27dp"
            android:background="@drawable/player_icon_bg"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:padding="7dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/playerName"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Monank Patel"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"

                android:textColor="#000000"
                android:textSize="12sp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/playerTeamIcon"
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    android:src="@drawable/manchester_logo"
                    android:layout_marginLeft="5dp"
                    />

                <TextView
                    android:id="@+id/playerTeamName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ENG"
                    android:textColor="#000000"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center_vertical"/>


            </LinearLayout>



        </LinearLayout>

        <TextView
            android:id="@+id/points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="73 pts"
            android:textColor="#000000"
            android:gravity="start"
            android:layout_marginTop="35dp"
            android:layout_marginRight="45dp"
            android:textSize="10sp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/credits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9.5"
            android:textColor="#000000"
            android:gravity="start"
            android:layout_marginTop="35dp"
            android:textSize="10sp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/plusIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/plusicon"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            />






    </LinearLayout>

</LinearLayout>