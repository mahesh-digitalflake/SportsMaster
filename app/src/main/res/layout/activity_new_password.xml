<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewPasswordActivity">

    <ImageView
        android:id="@+id/crtBackBtnImg"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_marginTop="17dp"
        android:background="#00000000"
        android:layout_marginHorizontal="27dp"
        android:src="@drawable/back_btn" />

    <TextView
        android:id="@+id/crtNewPasswordTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create new password"
        android:textColor="#1E232C"
        android:textSize="28sp"
        android:layout_below="@+id/crtBackBtnImg"
        android:layout_marginTop="32dp"
        android:textStyle="bold"
        android:layout_marginHorizontal="42dp"
        />

    <TextView
        android:id="@+id/newPassTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter a new password to continue."
        android:textColor="#8391A1"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="35dp"
        android:layout_below="@+id/crtNewPasswordTxt"
        android:layout_marginTop="10dp"
        android:lineSpacingExtra="5sp"
        android:gravity="top"
        android:textSize="16sp"
        android:translationY="-2.4sp"
        />

    <EditText
        android:id="@+id/crtNewPassword"
        android:layout_width="331dp"
        android:layout_height="56dp"
        android:layout_below="@+id/newPassTxt"
        android:layout_marginTop="45dp"
        android:background="@drawable/rectangle_box"
        android:hint="New Password"
        android:inputType="text"
        android:paddingLeft="12dp"
        android:textSize="18sp"
        android:layout_marginHorizontal="48dp"
        />

    <EditText
        android:id="@+id/crtConfPassword"
        android:layout_width="331dp"
        android:layout_height="56dp"
        android:layout_below="@+id/crtNewPassword"
        android:layout_marginTop="15dp"
        android:background="@drawable/rectangle_box"
        android:hint="Confirm Password"
        android:inputType="text"
        android:paddingLeft="12dp"
        android:textSize="18sp"
        android:layout_marginHorizontal="48dp"
        />

    <Button
        android:id="@+id/crtResetBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/crtConfPassword"
        android:layout_marginTop="116dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/login_btn"
        android:padding="15dp"
        android:text="Reset Password"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />



</RelativeLayout>